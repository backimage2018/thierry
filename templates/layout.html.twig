<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>{% block title %}E-SHOP HTML Template{% endblock %}</title>
		
	<!-- Google font -->
	<link href="{{ asset('https://fonts.googleapis.com/css?family=Hind:400,700') }}" rel="stylesheet">
	
	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
	
	<link href="{{ asset('css/blog.css') }}" rel="stylesheet" />

	<!-- Slick -->
	<link type="text/css" rel="stylesheet" href="{{ asset('css/slick.css') }}"/>
	<link type="text/css" rel="stylesheet" href="{{ asset('css/slick-theme.css') }}" />

	<!-- nouislider -->
	<link type="text/css" rel="stylesheet" href="{{ asset('css/nouislider.min.css') }}" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="{{ asset('css/font-awesome.min.css')}}">

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="{{ asset('css/style.css')}}" />

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

</head>

<body>

{% block header %}
	<!-- HEADER -->
	<header>
		<!-- top Header -->
		<div id="top-header">
			<div class="container">
				<div class="pull-left">
					<span>Welcome to E-shop!</span>
				</div>
				<div class="pull-right">
					<ul class="header-top-links">
					{% for link_top_nav in links_top_nav%}
						<li><a href="{{ link_top_nav.url }}">{{ link_top_nav.name }}</a></li>
					{% endfor %}	
						<li class="dropdown default-dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">{{ languages.default }} <i class="fa fa-caret-down"></i></a>
							<ul class="custom-menu">
							
						{% for langue in languages.country %}	
								<li><a href="#">{{ langue.name }} ({{ langue.code }})</a></li>
						{% endfor %}		
							</ul>
						</li>
						<li class="dropdown default-dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">{{ changes.default }} <i class="fa fa-caret-down"></i></a>
							<ul class="custom-menu">
							{% for change in changes.country %}
								<li><a href="#">{{ change.name }} ({{ change.code }})</a></li>
                            {% endfor %}	
							</ul>
						</li>
						
						
					</ul>
				</div>
			</div>
		</div>
		<!-- /top Header -->

		<!-- header -->
		<div id="header">
			<div class="container">
				<div class="pull-left">
					<!-- Logo -->
					<div class="header-logo">
						<a class="logo" href="/">
							<img src="/img/logo.png" alt="">
						</a>
					</div>
					<!-- /Logo -->

					<!-- Search -->
					<div class="header-search">
						<form>
							<input class="input search-input" type="text" placeholder="Enter your keyword">
							<select class="input search-categories">
								<option value="0">All Categories</option>
								<option value="1">Category 01</option>
								<option value="1">Category 02</option>
							</select>
							<button class="search-btn"><i class="fa fa-search"></i></button>
						</form>
					</div>
					<!-- /Search -->
				</div>
				<div class="pull-right">
					<ul class="header-btns">
						<!-- Account -->
						<li class="header-account dropdown default-dropdown">
							<div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
								<div class="header-btns-icon">
									<i class="fa fa-user-o"></i>
								</div>
								
								<strong class="text-uppercase">MY ACCOUNT <i class="fa fa-caret-down"></i></strong>
																
							</div>
							
							{% if app.user %}
							<a href="/login" class="text-uppercase">{{ app.user.username }}</a> / <a href="/logout" class="text-uppercase">Logout</a>
							{% else %}
							<a href="/login" class="text-uppercase">Login</a> / <a href="#" class="text-uppercase">Join</a>
							{% endif %}
							
							<ul class="custom-menu">
								<li><a href="#"><i class="fa fa-user-o"></i> My Account</a></li>
								<li><a href="/whishlist"><i class="fa fa-heart-o"></i> My Wishlist</a></li>
								<li><a href="#"><i class="fa fa-exchange"></i> Compare</a></li>
                                <li><a href="/checkout"><i class="fa fa-check"></i> Checkout</a></li>
                                {% if app.user %}
								<li><a href="/logout"><i class="fa fa-unlock-alt"></i> Logout</a></li>
								{% else %}
								<li><a href="/login"><i class="fa fa-unlock-alt"></i> Login</a></li>
								{% endif %}
								
								<li><a href="/register"><i class="fa fa-user-plus"></i> Create An Account</a></li>
							</ul>
						</li>
						<!-- /Account -->
						
						{% include 'cart.html.twig' %}


						<!-- Mobile nav toggle-->
						<li class="nav-toggle">
							<button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
						</li>
						<!-- / Mobile nav toggle -->
					</ul>
				</div>
			</div>
			<!-- header -->
		</div>
		<!-- container -->
	</header>
	<!-- /HEADER -->
{% endblock %}
	<!-- NAVIGATION -->
	<div id="navigation">
		<!-- container -->
		<div class="container">
			<div id="responsive-nav">
				<!-- category nav -->
                    {% block show_category %}<div class="category-nav show-on-click">{% endblock %}
					<span class="category-header">{{ categories.title }} <i class="fa fa-list"></i></span>
					<ul class="category-list">
					{% for categorie in categories.list %}
						<li><a href="{{  categorie.url }}">{{  categorie.name }}</a></li>
					{% endfor %}
					</ul>
				</div>
				<!-- /category nav -->

				<!-- menu nav -->
				<div class="menu-nav">
					<span class="menu-header">Menu <i class="fa fa-bars"></i></span>
					<ul class="menu-list">
					
						<li><a href="/">Home</a></li>
						<li><a href="/products/all">Shop</a></li>
						<li><a href="/products/genre/women">Women</a></li>
						<li><a href="/products/genre/men">Men</a></li>
						{% if is_granted('ROLE_ADMIN') %}
                    	<li><a href="/dashboard">Admin</a></li>
               			{% endif %}
						
				
				<!--  		{% for nav_title in nav_categories.menu %}
						<li class="dropdown mega-dropdown"><a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">{{ nav_title }} <i class="fa fa-caret-down"></i></a>
							<div class="custom-menu">
								<div class="row"> 
    								<div class="col-md-3">
    										<ul class="list-links">
    											<li>
    												<h3 class="list-links-title">{{ nav_categories.title }}</h3></li>
    												
    										{% for link in nav_categories.list %}
    										    <li><a href="{{ link.url }}">{{ link.name }}</a></li>
    										{% endfor %}	
    										</ul>
    								</div>
								</div>
							</div>
						</li>
						{% endfor %}-->
					
					</ul>
				</div>
				<!-- menu nav -->
			</div>
		</div>
		<!-- /container -->
	</div>
	<!-- /NAVIGATION -->
	
	{% block body %}{% endblock %}
	
		<!-- FOOTER -->
	<footer id="footer" class="section section-grey">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- footer widget -->
				<div class="col-md-3 col-sm-6 col-xs-6">
					<div class="footer">
						<!-- footer logo -->
						<div class="footer-logo">
							<a class="logo" href="#">
		            <img src="/img/logo.png" alt="">
		          </a>
						</div>
						<!-- /footer logo -->

						<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna</p>

						<!-- footer social -->
						<ul class="footer-social">
						{% for social_network in socials_networks %}
						
							<li><a href="{{ social_network.url }}" target="_blank"><i class="{{ social_network.icon }}"></i></a></li>
														
						{% endfor %}	
						</ul>
						<!-- /footer social -->
					</div>
				</div>
				<!-- /footer widget -->

				<!-- footer widget -->
				<div class="col-md-3 col-sm-6 col-xs-6">
					<div class="footer">
						<h3 class="footer-header">{{ links_footer_my_account.title }}</h3>
						<ul class="list-links">
						
                        {% for link_footer in links_footer_my_account.account %}
							<li><a href="{{ link_footer.url }}">{{ link_footer.name }}</a></li>
                        {% endfor %}
						</ul>
					</div>
				</div>
				<!-- /footer widget -->

				<div class="clearfix visible-sm visible-xs"></div>

				<!-- footer widget -->
				<div class="col-md-3 col-sm-6 col-xs-6">
					<div class="footer">
						<h3 class="footer-header">{{ links_footer_customer_service.title }}</h3>
						<ul class="list-links">
						{% for link_footer in links_footer_customer_service.service %}
							<li><a href="{{ link_footer.url }}">{{ link_footer.name }}</a></li>
						{% endfor %}
						</ul>
					</div>
				</div>
				<!-- /footer widget -->

				<!-- footer subscribe -->
				<div class="col-md-3 col-sm-6 col-xs-6">
					<div class="footer">
						<h3 class="footer-header">Stay Connected</h3>
						<p id="message-newsletter">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor.</p>
						
						
						<form> 
							<div class="form-group">
							
								<input class="input" id="register-newsletter" name="register-newsletter" placeholder="Enter Email Address">
							</div>
							<button class="primary-btn" id="btn-newsletter" name="btn-newsletter">Join Newsletter</button>
						</form> 
						
					</div>
				</div>
				<!-- /footer subscribe -->
			</div>
			<!-- /row -->
			<hr>
			<!-- row -->
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center">
					<!-- footer copyright -->
					<div class="footer-copyright">
						<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
						Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
						<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
					</div>
					<!-- /footer copyright -->
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</footer>
	<!-- /FOOTER -->

	<!-- jQuery Plugins -->
	<script src="{{ asset('js/jquery.min.js') }}"></script>
	<script src="{{ asset('js/bootstrap.min.js') }}"></script>
	<script src="{{ asset('js/slick.min.js') }}"></script>
	<script src="{{ asset('js/nouislider.min.js') }}"></script>
	<script src="{{ asset('js/jquery.zoom.min.js') }}"></script>
	<script src="{{ asset('js/main.js') }}"></script>
	<script src="{{ asset('js/script.js') }}"></script>

</body>

</html>