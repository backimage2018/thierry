<!-- Order Review -->

					<div class="col-md-12">
						<div class="order-summary clearfix" id="tab-order-review">
							<div class="section-title">
								<h3 class="title">Order Review</h3>
							</div>
							<table class="shopping-cart-table table">
								<thead>
									<tr>
										<th>Product</th>
										<th></th>
										<th class="text-center">Price</th>
										<th class="text-center">Quantity</th>
										<th class="text-center">Total</th>
										<th class="text-right"></th>
									</tr>
								</thead>
								<tbody id="tab-order-review">
								
				                {% for item_caddie in caddie %}
									<tr>
										<td class="thumb"><img src="/img/{{ item_caddie.product.image.url}}" alt=""></td>
										<td class="details">
											<a href="#">{{ item_caddie.product.name}}</a>
											<ul>
												<li><span>{{ item_caddie.product.size}}</span></li>
												<li><span>{{ item_caddie.product.color}}</span></li>
											</ul>
										</td>
										<td class="price text-center"><strong>{{ item_caddie.product.price}}</strong><br><del class="font-weak"><small>{{ item_caddie.product.oldprice}}</small></del></td>
										<td class="qty text-center"><input class="input" id="{{ item_caddie.product.id}}" name="{{ item_caddie.product.id}}" type="number" min="1" value="{{ item_caddie.quantity}}" onchange="updateProductQuantity(this, this.value);"></td>
										<td class="total text-center"><strong class="primary-color">{{ item_caddie.total}}</strong></td>
										<td class="text-right"><button class="main-btn icon-btn"><i class="fa fa-close"></i></button></td>
									</tr>
								{% endfor %}
							
								</tbody>
								<tfoot>
									<tr>
										<th class="empty" colspan="3"></th>
										<th>SUBTOTAL</th>
										<th colspan="2" class="sub-total">${{ total_caddie }}</th>
									</tr>
									<tr>
										<th class="empty" colspan="3"></th>
										<th>SHIPING</th>
										<td colspan="2">Free Shipping</td>
									</tr>
									<tr>
										<th class="empty" colspan="3"></th>
										<th>TOTAL</th>
										<th colspan="2" class="total">${{ total_caddie }}</th>
									</tr>
								</tfoot>
							</table>
							<div class="pull-right">
								<button class="primary-btn">Place Order</button>
							</div>
						</div>

					</div>
				
					
<!-- Order Review -->