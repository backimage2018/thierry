{% extends "admin/base.html.twig" %}


{% block body %}

				<div class="col-md-12">
                            <div class="card card-plain">
                                <div class="card-header" data-background-color="purple">
                                    <h4 class="title">Alerte du stock</h4>
                                    <p class="category">Here is a subtitle for this table</p>
                                </div>
                                <div class="card-content table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                        	<th>Id</th>
                                            <th>Name</th>
                                            <th>Quantité Restante Entrepôt</th>
                                            <th>Quantité Restante Magasin</th>
                                            <th>Ajout Entrepôt</th>
                                            <th>Ajout Magasin</th>
                                        </thead>
                                        <tbody>
                                        {% for item in stock %}
                                            <tr>
                                            	<td>{{ item.product.id}}</td>
                                            	<td>{{ item.product.name}}</td>
                                            	<td>{{ item.storequantity }}</td>
                                                <td>{{ item.eshopquantity }}</td>
                                                
                                                <td><input id="input-store-{{ item.id }}" type="input"><button type="button" id="{{ item.id }}" onclick="addQuantityStore(this, document.getElementById('input-store-{{ item.id }}').value);" class="btn btn-primary">Ajouter</button></td>
                                                <td><input id="input-shop-{{ item.id }}" type="input"><button type="button" id="{{ item.id }}" onclick="addQuantityShop(this, document.getElementById(input-shop-{{ item.id }}).value);" class="btn btn-primary">Ajouter</button></td>
                                            </tr>
                                         {% endfor %}  
                                         </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

{% endblock %}